@page
@model RazorEventMaker25InClass.Pages.Events.DeleteEventModel
@{
    ViewData["Title"] = "DeleteEvent";
}
<h1>Delete Event</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">

            <input type="hidden" asp-for="@Model.Event.Id" /> 
            <div class="form-group">
                <label asp-for="@Model.Event.Name" class="control-label"></label>
                <input asp-for="@Model.Event.Name" class="form-control" readonly />

            </div>
            <div class="form-group">
                <label asp-for="@Model.Event.Description" class="control-label"></label>
                <input asp-for="@Model.Event.Description" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Event.City" class="control-label"></label>
                <input asp-for="@Model.Event.City" class="form-control" readonly />

            </div>
            <div class="form-group">
                <label asp-for="@Model.Event.DateTime" class="control-label"></label>
                <input asp-for="@Model.Event.DateTime" class="form-control" readonly />

            </div>
            <div class="formgroup">
                <input type="submit" asp-page-handler="Delete" value="Delete" class="btn btn-danger" />
            </div>


        </form>


    </div>
    <div>
        <a asp-page="Index">Back to List</a>
    </div>
</div>


